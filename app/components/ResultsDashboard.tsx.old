'use client';

type Props = {
  power: number;
  powerCI: [number, number];
  avgDropouts: number;
  nPerArm: number;
  consort: {
    assessed: number;
    randomized: number;
    completed: number;
    analyzed: number;
  };
  dropoutRate: number;
  onDropoutChange: (v: number) => void;
  simulations: number;
};

export function ResultsDashboard({
  power,
  powerCI,
  avgDropouts,
  nPerArm,
  consort,
  dropoutRate,
  onDropoutChange,
  simulations,
